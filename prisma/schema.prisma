// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  username       String    @unique
  email          String    @unique
  password       String
  avatar         String?
  bio            String?
  isOnline       Boolean   @default(false)
  lastSeen       DateTime? @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  sentMessages   Message[]
  chatMemberships ChatMembership[]
  chatOwnerships Chat[]
  userStatus     UserStatus? // One-to-one relation with UserStatus

  @@map("users")
}

model Chat {
  id           String          @id @default(cuid())
  name         String?
  isGroup      Boolean         @default(false)
  avatar       String?
  description  String?
  createdBy    String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  messages     Message[]
  members      ChatMembership[]
  owner        User            @relation(fields: [createdBy], references: [id])

  @@map("chats")
}

model ChatMembership {
  id        String   @id @default(cuid())
  userId    String
  chatId    String
  role      String   @default("member") // admin, member, moderator
  joinedAt  DateTime @default(now())
  leftAt    DateTime?
  isActive  Boolean  @default(true)

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@unique([userId, chatId])
  @@map("chat_memberships")
}

model Message {
  id           String    @id @default(cuid())
  content      String
  messageType  String    @default("text") // text, image, file, etc.
  fileUrl      String?
  fileName     String?
  fileSize     Int?
  fileType     String?
  imageUrl     String? // For image messages
  readBy       String[]  @default([]) // Array of user IDs who read this message
  deliveredTo  String[]  @default([]) // Array of user IDs who received this message
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  senderId     String
  chatId       String

  // Relations
  sender       User      @relation(fields: [senderId], references: [id])
  chat         Chat      @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model UserStatus {
  id             String    @id @default(cuid())
  userId         String    @unique
  status         String    @default("online") // online, offline, away, busy
  lastSeen       DateTime  @default(now())

  // Relations
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade, map: "FK_user_status_userId")

  @@map("user_statuses")
}